<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <LinearLayout
        android:id="@+id/llVvsMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/serieTitle"
            android:text="SÃ©rie 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp" />

        <Button
            android:id="@+id/modeButton"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:text="VVS Simple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvNbMesures"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:text="0" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/deleteButtonColor"
            android:text="X"
            android:textColor="@color/deleteButtonTextColor" />
    </LinearLayout>



<SeekBar
android:id="@+id/mesuresSeekBar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="10dp"
android:min="1"
android:max="15"
android:progress="50"
android:thumbTint="@color/primaryColor"
android:progressTint="@color/primaryColor"
android:progressBackgroundTint="@color/lightGray" />

<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:text="orientation \nde la barre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:gravity="center"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<Button
    android:id="@+id/barreButton"
    android:text="horaire"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="true" />

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="orientation \ndu fond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/fondButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="horaire" />

            </LinearLayout>


        </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:text="vitesse \ndu fond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/vitesseFond"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="vitesse"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/validationVitesse"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="ok" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="@color/lightGray" />

    </LinearLayout>