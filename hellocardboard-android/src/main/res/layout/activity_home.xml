<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="16.0dip"
    android:paddingTop="16.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/placeholderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Patient selection"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/placeholderText"
        android:orientation="horizontal"
        android:id="@+id/selectLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No patient selected"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/patientId"
            />

        <Button
            android:id="@+id/placeholderButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeholderText"
            android:layout_weight="1"
            android:text="select patient" />

    </LinearLayout>

    <Button
        android:id="@+id/manette"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRole"
        android:text="@string/btn_manette" />

    <Button
        android:id="@+id/ecran"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manette"
        android:text="@string/btn_ecran" />
    <Button
        android:id="@+id/bluetooth_reset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ecran"
        android:text="@string/bluetooth_reset" />

    <TextView
        android:id="@+id/tvParametres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLayout"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="ParamÃ¨tres de la mesure"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/protocole"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Role of the smartphone"
        android:textSize="20sp" />
